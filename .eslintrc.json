{
    "parser": "babel-eslint",
    "env": {
        "node": true,
        "jest": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "require": true
    },
    "rules": {
        "indent": [1, "tab"],
        "no-tabs": 0,
        "max-len": [
            "error",
            {
                "code": 200
            }
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "linebreak-style": 0,
        "eol-last": 0,
        "prefer-destructuring": [
            "error",
            {
                "array": false,
                "object": false
            }
        ]
    }
}